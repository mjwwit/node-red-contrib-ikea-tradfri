{
  "compilerOptions": {
    "strict": true,
    "strictBindCallApply": false,
    "removeComments": false,
    "newLine": "LF",
    "pretty": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "ES2019", "ES2020.Promise", "ES2020.BigInt", "ES2020.String"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
